@model IEnumerable<ShoutBook.Models.Beacon>

@{
    ViewData["Title"] = "Received";
}

<h2>Received</h2>

<p>
    <a class="btn btn-default" asp-action="Create">New Beacon</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @if (item.Seen == 1)
                {
                    <h5>Seen</h5>
                }
                else
                {
                    <h5>Unseen</h5>
                }
            </td>
            <td>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
