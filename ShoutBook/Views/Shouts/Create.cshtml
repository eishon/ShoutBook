@model ShoutBook.Models.ShoutBookVM.ShoutCreateVM

@{
    ViewData["Title"] = "Shout";
}

<h2>Shout</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model" class="control-label"></label>
                <select asp-for="Type" class="form-control"
                        asp-items="Model.AllShoutType">
                    <option value="">-- Select Shout Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Shout" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Feed</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
